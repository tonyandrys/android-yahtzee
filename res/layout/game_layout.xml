<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" android:background="@drawable/teal_felt"
                android:id="@+id/game_container_framelayout">

    <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true" android:id="@+id/dice_container_tablelayout"
            android:stretchColumns="*">
        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" android:layout_marginTop="10dp">
            <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <ImageView
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:id="@+id/die_1_imageview" android:layout_column="0" android:src="@drawable/diceface_1"
                        android:tag="0" android:layout_centerInParent="true"/>
                <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:id="@+id/imageView" android:src="@drawable/lock_small"
                        android:layout_alignBottom="@+id/die_1_imageview"
                        android:layout_centerHorizontal="true" android:layout_marginBottom="2dp" android:tag="0L"
                        android:visibility="invisible"/>
            </RelativeLayout>
            <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
                <ImageView android:layout_width="75dp" android:layout_height="75dp" android:id="@+id/die_2_imageview"
                           android:layout_column="1" android:src="@drawable/diceface_1" android:tag="1"
                           android:layout_centerHorizontal="true"/>
                <ImageView android:layout_width="15dp" android:layout_height="15dp" android:id="@+id/imageView1"
                           android:src="@drawable/lock_small" android:layout_alignBottom="@+id/die_2_imageview"
                           android:layout_centerHorizontal="true" android:layout_marginBottom="2dp" android:tag="1L"
                           android:visibility="invisible"/>
            </RelativeLayout>
            <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
                <ImageView android:layout_width="75dp" android:layout_height="75dp" android:id="@+id/die_3_imageview"
                           android:layout_column="2" android:src="@drawable/diceface_1" android:tag="2"
                           android:layout_centerHorizontal="true"/>
                <ImageView android:layout_width="15dp" android:layout_height="15dp" android:id="@+id/imageView2"
                           android:src="@drawable/lock_small" android:layout_alignBottom="@+id/die_3_imageview"
                           android:layout_centerHorizontal="true" android:layout_marginBottom="2dp" android:tag="2L"
                           android:visibility="invisible"/>
            </RelativeLayout>
        </TableRow>
        <TableRow
                android:layout_width="wrap_content"
                android:layout_height="fill_parent" android:layout_marginTop="10dp">
            <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" android:layout_weight="1">
                <ImageView android:layout_width="75dp" android:layout_height="75dp" android:id="@+id/die_4_imageview"
                           android:layout_column="0" android:src="@drawable/diceface_1" android:layout_weight="1"
                           android:tag="3" android:layout_centerHorizontal="true"/>
                <ImageView android:layout_width="15dp" android:layout_height="15dp" android:id="@+id/imageView3"
                           android:src="@drawable/lock_small" android:layout_alignBottom="@+id/die_4_imageview"
                           android:layout_centerHorizontal="true" android:layout_marginBottom="2dp" android:tag="3L"
                           android:visibility="invisible"/>
            </RelativeLayout>
            <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" android:layout_weight="1">
                <ImageView android:layout_width="75dp" android:layout_height="75dp" android:id="@+id/die_5_imageview"
                           android:layout_column="1" android:src="@drawable/diceface_1" android:layout_weight="1"
                           android:tag="4" android:layout_centerHorizontal="true"/>
                <ImageView android:layout_width="15dp" android:layout_height="15dp" android:id="@+id/imageView4"
                           android:src="@drawable/lock_small" android:layout_alignBottom="@+id/die_5_imageview"
                           android:layout_centerHorizontal="true" android:layout_marginBottom="2dp" android:tag="4L"
                           android:visibility="invisible"/>
            </RelativeLayout>
        </TableRow>
    </TableLayout>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/roll"
            android:id="@+id/roll_dice_button" android:layout_centerHorizontal="true"
            android:layout_below="@+id/dice_container_tablelayout" android:background="@drawable/gray_rounded_button"
            android:layout_marginTop="15dp" android:textColor="#000000" android:textSize="22sp"
            android:paddingRight="40dp" android:paddingLeft="40dp"/>
    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:layout_below="@+id/roll_dice_button">
        <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" android:layout_centerHorizontal="true"
                android:background="#EDEDED" android:layout_marginTop="10dp">
            <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" android:layout_marginLeft="5dp" android:layout_marginTop="5dp">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ones"
                        android:id="@+id/textView" android:layout_column="0" android:textSize="20sp"
                        android:layout_marginTop="5dp" android:layout_marginBottom="5dp"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:id="@+id/ones_score_textview" android:layout_column="1" android:textSize="20sp"
                        android:layout_marginLeft="5dp" android:layout_marginBottom="5dp" android:layout_marginTop="5dp"
                        android:layout_marginRight="5dp"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Three Of A Kind"
                        android:id="@+id/textView6" android:layout_column="3" android:textSize="15sp"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:id="@+id/textView12" android:layout_column="4" android:textSize="20sp"
                        android:layout_marginLeft="5dp" android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Yahtzee"
                        android:id="@+id/textView18" android:layout_column="5" android:textSize="15sp"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:id="@+id/textView20" android:layout_column="6" android:textSize="20sp"
                        android:layout_marginLeft="5dp"/>
            </TableRow>
            <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" android:layout_marginLeft="5dp">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Twos"
                        android:id="@+id/textView1" android:layout_column="0" android:textSize="20sp"
                        android:layout_marginTop="5dp" android:layout_marginBottom="5dp"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0"
                          android:id="@+id/twos_score_textview" android:layout_column="1" android:textSize="20sp"
                          android:layout_marginLeft="5dp"
                          android:layout_marginBottom="5dp" android:layout_marginTop="5dp"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Four Of A Kind"
                        android:id="@+id/textView7" android:layout_column="3" android:textSize="15sp"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:id="@+id/textView13" android:layout_column="4" android:textSize="20sp"
                        android:layout_marginLeft="5dp" android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="B. Yahtzee"
                        android:id="@+id/textView19" android:layout_column="5" android:textSize="15sp"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:id="@+id/textView21" android:layout_column="6" android:textSize="20sp"
                        android:layout_marginLeft="5dp"/>
            </TableRow>
            <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" android:layout_marginLeft="5dp">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Threes"
                        android:id="@+id/textView2" android:layout_column="0" android:textSize="20sp"
                        android:layout_marginTop="5dp" android:layout_marginBottom="5dp"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0"
                          android:id="@+id/threes_score_textview" android:layout_column="1" android:textSize="20sp"
                          android:layout_marginLeft="5dp"
                          android:layout_marginBottom="5dp" android:layout_marginTop="5dp"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sm Straight"
                        android:id="@+id/textView8" android:layout_column="3" android:textSize="15sp"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0"
                          android:id="@+id/textView14" android:layout_column="4" android:textSize="20sp"
                          android:layout_marginLeft="5dp" android:layout_marginRight="5dp"
                          android:layout_marginTop="5dp"/>
            </TableRow>
            <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" android:layout_marginLeft="5dp">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fours"
                        android:id="@+id/textView3" android:layout_column="0" android:textSize="20sp"
                        android:layout_marginTop="5dp" android:layout_marginBottom="5dp"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0"
                          android:id="@+id/fours_score_textview" android:layout_column="1" android:textSize="20sp"
                          android:layout_marginLeft="5dp"
                          android:layout_marginBottom="5dp" android:layout_marginTop="5dp"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lg Straight"
                        android:id="@+id/textView9" android:layout_column="3" android:textSize="15sp"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0"
                          android:id="@+id/textView15" android:layout_column="4" android:textSize="20sp"
                          android:layout_marginLeft="5dp" android:layout_marginRight="5dp"
                          android:layout_marginTop="5dp"/>
            </TableRow>
            <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" android:layout_marginLeft="5dp">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fives"
                        android:id="@+id/textView4" android:layout_column="0" android:textSize="20sp"
                        android:layout_marginTop="5dp" android:layout_marginBottom="5dp"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0"
                          android:id="@+id/fives_score_textview" android:layout_column="1" android:textSize="20sp"
                          android:layout_marginLeft="5dp"
                          android:layout_marginBottom="5dp" android:layout_marginTop="5dp"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Full House"
                        android:id="@+id/textView10" android:layout_column="3" android:textSize="15sp"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0"
                          android:id="@+id/textView16" android:layout_column="4" android:textSize="20sp"
                          android:layout_marginLeft="5dp" android:layout_marginRight="5dp"
                          android:layout_marginTop="5dp"/>
            </TableRow>
            <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" android:layout_marginLeft="5dp">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sixes"
                        android:id="@+id/textView5" android:layout_column="0" android:textSize="20sp"
                        android:layout_marginTop="5dp" android:layout_marginBottom="5dp"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0"
                          android:id="@+id/sixes_score_textview" android:layout_column="1" android:textSize="20sp"
                          android:layout_marginLeft="5dp"
                          android:layout_marginBottom="5dp" android:layout_marginTop="5dp"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chance"
                        android:id="@+id/textView11" android:layout_column="3" android:textSize="15sp"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0"
                          android:id="@+id/textView17" android:layout_column="4" android:textSize="20sp"
                          android:layout_marginLeft="5dp" android:layout_marginRight="5dp"
                          android:layout_marginTop="5dp"/>
            </TableRow>
        </TableLayout>
    </RelativeLayout>
</RelativeLayout>